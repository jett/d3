<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">


    <context:annotation-config/>

    <bean id="localPublisher" class="ph.hatch.ddd.infrastructure.events.MBassadorEventsPublisher" />
    <bean id="jmsPublisher" class="ph.hatch.ddd.infrastructure.events.JMSEventsPublisher" />

    <bean class="ph.hatch.ddd.infrastructure.events.MBassadorEventsLIstenerProcessor" />

    <bean class="ph.hatch.d3.eventbus.test.EventHandlers" />


