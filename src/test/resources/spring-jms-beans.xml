    <bean name="qConnectionFactory" class="org.hornetq.jms.client.HornetQXAConnectionFactory" >
        <constructor-arg value="false" />
        <constructor-arg>
            <bean name="transportConfiguration" class="org.hornetq.api.core.TransportConfiguration">
                <constructor-arg value="org.hornetq.core.remoting.impl.netty.NettyConnectorFactory" />
                <constructor-arg>
                    <map key-type="java.lang.String" value-type="java.lang.Object">
                        <entry key="host" value="127.0.0.1" />
                        <entry key="port" value="5445" />
                    </map>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>

    <bean name="theTopic" class="org.hornetq.jms.client.HornetQTopic">
        <constructor-arg value="IMSEvents" />
    </bean>

    <bean name="theQueue" class="org.hornetq.jms.client.HornetQQueue">
        <constructor-arg value="JettQueue" />
    </bean>

    <bean id="MessageSender" class="ph.hatch.d3.core.MessageSender">
        <property name="connectionFactory" ref="qConnectionFactory"/>
        <property name="destination" ref="theTopic"/>
    </bean>

    <bean id="jmsMessageSender" class="ph.hatch.ddd.infrastructure.events.MBassadorJMSEventSender">
        <property name="connectionFactory" ref="qConnectionFactory"/>
        <property name="destination" ref="theTopic"/>
    </bean>

    <!--<bean id="listener" class="ph.hatch.d3.core.ExampleListener"/>-->
    <bean id="listener" class="ph.hatch.ddd.infrastructure.events.MBassadorJMSEventListener"/>


    <!-- wire the listener -->
    <bean id="listenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="qConnectionFactory"/>
        <property name="destination" ref="theTopic"/>
        <property name="messageListener" ref="listener"/>
    </bean>

